<?xml version="1.0"?>
<Container version="2">
  <Name>vm-babysitter</Name>
  <Repository>docker.staffwerke.de/vm-babysitter:stable</Repository>
  <Registry/>
  <Network>host</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project/>
  <Overview/>
  <Category/>
  <WebUI/>
  <TemplateURL/>
  <Icon/>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1683521836</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="Time Zone" Target="TZ" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">Europe/Berlin</Config>
  <Config Name="Restart VMs if required" Target="RESTART_VMS_IF_REQUIRED" Default="" Mode="" Description="Leave blank to disable" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Ignored VMs List" Target="IGNORED_VMS_LIST" Default="" Mode="" Description="VMs excluded from backups" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Autostart VMs List" Target="AUTOSTART_VMS_LIST" Default="" Mode="" Description="Start these VMs along with this container" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Cron schedule" Target="CRON_SCHEDULE" Default="@daily" Mode="" Description="Set schedule for incremental backups" Type="Variable" Display="always" Required="false" Mask="false">0 2 * * *</Config>
  <Config Name="VM's disk images path" Target="/mnt/user/vms" Default="" Mode="rw" Description="" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/vms</Config>
  <Config Name="Mount point for local Backups" Target="/backups" Default="" Mode="rw" Description="" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/backups/vm-backups</Config>
  <Config Name="Max backup chains to keep locally" Target="MAX_BACKUP_CHAINS_PER_VM" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Remote backups main path" Target="REMOTE_BACKUPS_MAIN_PATH" Default="" Mode="" Description="SSH-like folder for remote mirror" Type="Variable" Display="always" Required="false" Mask="false">root@192.168.65.2:/mnt/user/vm-backups-mirror</Config>
  <Config Name="Max backup chains to keep remotely" Target="REMOTE_MAX_BACKUP_CHAINS_PER_VM" Default="" Mode="" Description="# of old backup chains to keep remotely" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="SSH options" Target="SSH_OPTS" Default="" Mode="" Description="Global SSH options to connect/sync with mirror" Type="Variable" Display="always" Required="false" Mask="false">-q -o IdentityFile=/private/hostname.key -o BatchMode=yes -o StrictHostKeyChecking=no -o ConnectTimeout=10</Config>
  <Config Name="Private SSH Key path" Target="/private/hostname.key" Default="" Mode="ro" Description="" Type="Path" Display="always" Required="false" Mask="false">/root/.ssh/hostname.key</Config>
  <Config Name="RAM limit per scheduled backup" Target="RAM_LIMIT_PER_SCHED_BACKUP" Default="" Mode="" Description="Limit VMs RAM for scheduled backups. Accepts CAP multipliers (e.g. 1048576K, 2048M, 4G, etc. otherwise assumes Bytes)" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Persistent logs path" Target="/logs" Default="" Mode="rw" Description="" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/docker/apps/vm-babysitter/logs</Config>
  <Config Name="Backups main path" Target="BACKUPS_MAIN_PATH" Default="/backups" Mode="" Description="Internal folder to mount all local backups" Type="Variable" Display="advanced" Required="false" Mask="false">/backups</Config>
  <Config Name="Virtnbdbackup socket" Target="/var/tmp" Default="/var/tmp" Mode="rw" Description="" Type="Path" Display="advanced" Required="true" Mask="false">/var/tmp</Config>
  <Config Name="Libvirt socket API" Target="/run/libvirt" Default="/var/run/libvirt" Mode="rw" Description="" Type="Path" Display="advanced" Required="true" Mask="false">/var/run/libvirt</Config>
  <Config Name="Lock folder" Target="/run/lock" Default="/var/run/lock" Mode="rw" Description="" Type="Path" Display="advanced" Required="true" Mask="false">/var/run/lock</Config>
  <Config Name="Rsync extra arguments" Target="RSYNC_ARGS" Default="-a" Mode="" Description="" Type="Variable" Display="advanced" Required="false" Mask="false">-aP --bwlimit=1179648</Config>
  <Config Name="Virtnbdbackup extra arguments" Target="VIRTNBDBACKUP_ARGS" Default="" Mode="" Description="" Type="Variable" Display="advanced" Required="false" Mask="false">--compress</Config>
  <Config Name="Main monitor log path" Target="MAIN_LOGPATH" Default="/logs/vm-babysitter.log" Mode="" Description="" Type="Variable" Display="advanced" Required="false" Mask="false">/logs/vm-babysitter.log</Config>
  <Config Name="Scheduled backups log path" Target="SCHEDULED_LOGPATH" Default="/logs/scheduled-backups.log" Mode="" Description="" Type="Variable" Display="advanced" Required="false" Mask="false">/logs/scheduled-backups.log</Config>
  <Config Name="Wait time for VMs" Target="WAIT_TIME" Default="60" Mode="" Description="" Type="Variable" Display="advanced" Required="false" Mask="false">60</Config>
  <Config Name="Qemu config path" Target="/etc/libvirt/qemu" Default="/etc/libvirt/qemu" Mode="rw" Description="Main path for VM's checkpoints and nvram files" Type="Path" Display="advanced" Required="true" Mask="false">/etc/libvirt/qemu</Config>
  <Config Name="Ovmf binaries path" Target="/usr/share/qemu/ovmf-x64" Default="/usr/share/qemu/ovmf-x64" Mode="ro" Description="Required when VMs are in need of a new nvram" Type="Path" Display="advanced" Required="true" Mask="false">/usr/share/qemu/ovmf-x64</Config>
</Container>
